static HashMap<Integer, Long> cache = new HashMap<>();
    static {
        cache.put(1, 1L);
        cache.put(2, 2L);
        cache.put(3, 4L);
    }
    public static long stepPerms(int n) {
        if(cache.containsKey(n)) {
            return cache.get(n);
        } 
        cache.put(n, stepPerms(n-1)+stepPerms(n-2)+stepPerms(n-3));
        return (int)(cache.get(n)%10000000007L);
    }
