public static int alternatingCharacters(String s) {
        int c = 0;
        boolean con = true;
        char a = s.charAt(0);
        for(int i = 0 ; i < s.length()-1 ; i++) {
            if(con) {
                a = s.charAt(i);    
            }
            if(s.charAt(i+1) == a) {
                c++;
                con = false;
            } else {
                con = true;
            }
        }
        return c;
    }
